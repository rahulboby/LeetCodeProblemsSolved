class Solution {
    public long zeroFilledSubarray(int[] nums) {
        long output = 0;
        long temp = 0;

        for(int i = 0; i<nums.length; i++){
            temp = 0;
            while(i<nums.length && nums[i] == 0){
                temp++;
                i++;
            }
            output += temp*(temp+1)/2;

        }

        return output;
    }
}
