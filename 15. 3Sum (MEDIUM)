class Solution {
    public List<List<Integer>> threeSum(int[] nums) {
        int len = nums.length;
        List<List<Integer>> output = new ArrayList <>();
        Arrays.sort(nums);
        for(int i = 0; i<len; i++){
            // SKIP DUPLICATE AT 'i;
            if(i>0 && nums[i] == nums[i-1])
                continue;

            // left moves from i towards right
            int left = i+1;
            // right moves from n-1 towards left
            int right = len-1;
            while(left<right){
                int sum = nums[i] + nums[left] + nums[right];
                // Add triplet to output if sum == 0
                if(sum == 0){
                    output.add(Arrays.asList(nums[i], nums[left], nums[right]));
                    //SKIP DUPLICATE AT 'left' and 'right'
                    while(left<right && nums[left] == nums[left+1])
                        left++;
                    while(left<right && nums[right] == nums[right-1])
                        right--;
                    
                    left++;
                    right--;
                }
                else if(sum>0)
                    right--;
                else
                    left++;
            }
        }
        
    return output;
    }
}
